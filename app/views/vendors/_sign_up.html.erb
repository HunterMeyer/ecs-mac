<h1><%= resource_name.capitalize %> Sign Up</h1>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <h2>Profile Information</h2>
	<%= f.label      :first_name %>
	<%= f.text_field :first_name %>

  <%= f.label      :last_name %>
	<%= f.text_field :last_name %>

	<%= f.label      :vendor_name, 'Vendor Name' %>
	<%= f.text_field :vendor_name %>

	<%= f.label	     :phone, 'Phone Number' %>
	<%= f.text_field :phone %>

	<%= f.label      :address, 'Street Address' %>
	<%= f.text_field :address %>

	<%= f.label      :city %>
	<%= f.text_field :city %>

	<%= f.label      :state %>
	<%= f.text_field :state %>

	<%= f.label      :zip, 'Zip Code' %>
	<%= f.text_field :zip %>

	<%= f.label      :comments %>
	<%= f.text_area  :comments %>

	<div>
		<%= f.check_box  :speak_topic %>
		<%= f.label      :speak_topic, 'I\'m willing to speak on this topic' %>
	</div>

	<div>
		<%= f.check_box  :speak_topic_ceu %>
		<%= f.label      :speak_topic_ceu, 'I\'m willing to speak on this topic for CEU' %>
	</div>

	<h2>Login Information</h2>
	<%= f.label       :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <span class='button' style='display: block;'><%= f.submit "Sign up" %></span>
<% end %>

<%= render partial: 'devise/shared/links' %>
