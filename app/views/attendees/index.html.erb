<% provide(:title, 'All Attendees') %>
<div class='container'>
  <h1>Attendees</h1>

  <% if @attendees.any? %>
  	<table class='table table-striped'>
      <tr>
        <th class='orange'>First Name</th>
        <th class='orange'>Last Name</th>
        <th class='orange'>Email</th>
        <th class='orange'>Phone</th>
        <th class='orange'>Industry</th>
        <th class='orange'>Pull Out</th>
        <th class='orange'>Paid</th>
      </tr>
      <% @attendees.each do |attendee| %>
    		<tr>
          <td><%= "#{attendee.first_name}" %></td>
          <td><%= "#{attendee.last_name}"  %></td>
    	 	  <td><%= "#{attendee.email}"      %></td>
    	   	<td><%= "#{attendee.phone}"      %></td>
          <td><%= "#{attendee.industry}"   %></td>
          <td><%= "#{attendee.pull_out}"   %></td>
          <% if attendee.paid %>
            <td><%= attendee.paid.strftime("%m-%d-%Y") %></td>
    	    <% else %>
            <td></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  <% else %>
    <h2>No attendees.</h2>
  <% end %>
</div>