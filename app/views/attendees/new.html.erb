<% provide(:title, 'Attendees') %>
<div class='small-banner'>
	<span class='above-brand'>Thank You for Your Interest in The First Annual<span>
	<span class='brand'>Engineered Corrosion Solutions 2014 Conference</span>
</div>

<div class='container'>
	<div class='tall card'>
		<span class='card-header'>Attendee Sign Up</span>
		<div class='form span4'>
			<%= form_for @attendee do |f| %>
				<%= render 'attendees/attendee_error_messages' %>
				<div class='controls controls-row'>
					<%= f.text_field  :first_name, placeholder: 'First Name', autofocus: true, class: 'span2 dropshadow' %>
					<%= f.text_field  :last_name,  placeholder: 'Last Name', class: 'span2 dropshadow' %>
				</div>
				<div class='controls controls-row'>
				  <%= f.email_field :email, placeholder: 'Email', class: 'span2 dropshadow' %>
					<%= f.text_field  :phone, placeholder: 'Phone Number', class: 'span2 dropshadow' %>
				</div>
				<div class='controls controls-row'>
					<%= f.text_field  :address, placeholder: 'Street Address', class: 'span4 dropshadow' %>
				</div>
				<div class='controls controls-row'>
					<%= f.text_field  :city, placeholder: 'City', class: 'span2 dropshadow' %>
					<%= f.text_field  :state, placeholder: 'State', class: 'span1 dropshadow' %>
					<%= f.text_field  :zip, placeholder: 'Zip', class: 'span1 dropshadow' %>
				</div>
				<div class='controls controls-row'>
					<%= f.text_field  :industry, placeholder: 'Company', class: 'span4 dropshadow' %>
				</div>
				<div class='controls controls-row'>
					<%= f.text_area   :questions, placeholder: 'Specific Quesions', class: 'span4 dropshadow', rows: '3' %>
				</div>
			  <span class='pull-right'>
			  	<%= f.submit 'Register', class: 'btn btn-primary' %>
			 	</span>
			<% end %>
		</div>
	</div>

	<div class='wide card'>
		<span class='quick-info'>
			<span class='more-info bold'>Letter from the host..</span>
	</div>
</div>
</div>
</div>

</div>